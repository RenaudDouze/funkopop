{% extends 'AppBundle:Admin:base.html.twig' %}

{% block admin_content %}
{% include 'AppBundle:Tool:flash_messages.html.twig' %}
<div class="row small-up-2 medium-up-3 large-up-4">

    {% for image in list %}
    {% set toggleId = 'description-image-' ~ image.id %}
    <div class="columns">
        <h4>
            {{ image.title }}
        </h4>
        <p>
            {% for tag in image.tags|split(';') %}
            <span class="secondary label">{{ tag }}</span>
            {% endfor %}
        </p> 
        <p>
            <small>{{ image.description }}</small>
        </p> 

        <img src="/{{ image.path }}" alt="{{ image.name }}"class="thumbnail" />

        <div class="button-group tiny expanded">
            <a href="{{ path('app_admin_edit', {id: image.id}) }}" class="success button">
                Editer
            </a>
            <a href="{{ path('app_admin_delete', {id: image.id}) }}" class="alert button">
                Supprimer
            </a>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock admin_content %}

{% block stylesheet %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/motion-ui.min.css') }}">
{% endblock stylesheet %}

{% block scripts %}
{{ parent() }}
<script src="{{ asset('js/motion-ui.min.js') }}"></script>
{% endblock scripts %}